{{template "user/settings/layout_head" (dict "ctxData" . "pageClass" "user settings notifications")}}
	<div class="user-setting-content">
		<h4 class="ui top attached header">
			{{ctx.Locale.Tr "settings.manage_notifications"}}
		</h4>
		<div class="ui attached segment">
			<p>{{ctx.Locale.Tr "settings.global_notification_email"}}</p>
			<div class="ui selection type dropdown">
				<input type="hidden" id="visibility" name="visibility" value="0">
				<div class="text">
					{{ctx.Locale.Tr "settings.placeholder1_email"}}
					{{ctx.Locale.Tr "settings.placeholder2_email"}}
				</div>
				{{svg "octicon-triangle-down" 14 "dropdown icon"}}
				<div class="menu">
					<div class="item" data-value="0">{{ctx.Locale.Tr "settings.placeholder1_email"}}</div>
					<div class="item" data-value="1">{{ctx.Locale.Tr "settings.placeholder2_email"}}</div>
				</div>
			</div>
		</div>
		<div class="ui attached segment">
			<div class="ui list">
				{{if $.EnableNotifyMail}}
				<div class="item">
					<div class="tw-mb-2">{{ctx.Locale.Tr "settings.email_desc"}}</div>
					<form action="{{AppSubUrl}}/user/settings/account/email" class="ui form" method="post">
						{{$.CsrfTokenHtml}}
						<input name="_method" type="hidden" value="NOTIFICATION">
						<div class="tw-flex tw-flex-wrap tw-gap-2">
							<div class="ui selection dropdown">
								<input name="preference" type="hidden" value="{{.EmailNotificationsPreference}}">
								{{svg "octicon-triangle-down" 14 "dropdown icon"}}
								<div class="text"></div>
								<div class="menu">
									<div data-value="enabled" class="{{if eq .EmailNotificationsPreference "enabled"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.email_notifications.enable"}}</div>
									<div data-value="andyourown" class="{{if eq .EmailNotificationsPreference "andyourown"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.email_notifications.andyourown"}}</div>
									<div data-value="onmention" class="{{if eq .EmailNotificationsPreference "onmention"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.email_notifications.onmention"}}</div>
									<div data-value="disabled" class="{{if eq .EmailNotificationsPreference "disabled"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.email_notifications.disable"}}</div>
								</div>
							</div>
							<button class="ui primary button">{{ctx.Locale.Tr "settings.email_notifications.submit"}}</button>
						</div>
					</form>
				</div>
				{{end}}
			</div>
		</div>
		<div class="ui attached segment">
			<div class="ui list">
				{{if $.EnableNotifyMail}}
				<div class="item">
					<div class="tw-mb-2">{{ctx.Locale.Tr "settings.ui_notifications_desc"}}</div>
					<form action="{{AppSubUrl}}/user/settings/account/email" class="ui form" method="post">
						{{$.CsrfTokenHtml}}
						<input name="_method" type="hidden" value="NOTIFICATION">
						<div class="tw-flex tw-flex-wrap tw-gap-2">
							<div class="ui selection dropdown">
								<input name="preference" type="hidden" value="{{.EmailNotificationsPreference}}">
								{{svg "octicon-triangle-down" 14 "dropdown icon"}}
								<div class="text"></div>
								<div class="menu">
									<div data-value="enabled" class="{{if eq .EmailNotificationsPreference "enabled"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.ui_notifications.enable"}}</div>
									<div data-value="andyourown" class="{{if eq .EmailNotificationsPreference "andyourown"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.ui_notifications.andyourown"}}</div>
									<div data-value="onmention" class="{{if eq .EmailNotificationsPreference "onmention"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.ui_notifications.onmention"}}</div>
									<div data-value="disabled" class="{{if eq .EmailNotificationsPreference "disabled"}}active selected {{end}}item">{{ctx.Locale.Tr "settings.ui_notifications.disable"}}</div>
								</div>
							</div>
							<button class="ui primary button">{{ctx.Locale.Tr "settings.ui_notifications.submit"}}</button>
						</div>
					</form>
				</div>
				{{end}}
			</div>
		</div>

{{template "user/settings/layout_footer" .}}
